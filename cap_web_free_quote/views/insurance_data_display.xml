<odoo>
    <template id="life_insurance_data_display_template" name="Thank You">
        <t t-call="website.layout">
            <div id="wrap" class="insurance_data_css">
                <section class="features">
                    <div class="container">
                        <t t-set="life" t-value="insurance_data"/>
                        <div class="thankyou_content_wrapper text-center">
                            <!--Title That shows First/Last name and age-->
                            <div class="thankyou_customer_details_wrapper">
                                <h3>
                                    <strong>
                                        <span><t t-esc="life.question_28"/>&#160;&#160;<t t-esc="life.question_29"/>
                                        </span>
                                        <span>- Age&#160;&#160;<t t-esc="life.question_1"/>
                                        </span>
                                    </strong>
                                </h3>
                            </div>

                            <t t-set="thk_invest_balance"
                               t-value="life.total_insurance - (life.question_14_1 + life.question_22_1)"/>

                            <!--Panel 1 Start-->
                            <div class="thankyou_content_wrapper_panel thankyou_pannel_1">
                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/retirement.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Desired Retirement Age
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_2"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/children.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Kids/Future Kids
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_7"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/tuition.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Tuition Responsibility
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_14_2"
                                               t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/debt.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Total Debt
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_22_1"
                                               t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"
                                            />
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/expenses.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Annual Recurring Expenses
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_24_1 + life.question_27_1"
                                               t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"
                                            />
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_pannel_overall_info_text">
                                    Total Life Insurance Death Benefit Required to cover your lifestyle
                                </div>

                                <div class="thankyou_panel_1_total_btn">
                                    <t t-esc="life.total_insurance"
                                       t-options="{
                                       'widget': 'monetary',
                                       'display_currency': currency_id
                                       }"
                                    />
                                </div>
                            </div>
                            <!--Panel 1 End-->

                            <!--Panel 2 Start-->
                            <div class="thankyou_content_wrapper_panel_title">
                                <span>What's The Plan If you Die?</span>
                            </div>

                            <div class="thankyou_content_wrapper_panel thankyou_pannel_1">
                                <div class="thankyou_content_inner_title">
                                    <span>Pay Off Debt abd Set Aside Funds for your Children's Education</span>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_details">
                                            <span t-esc="0 - life.question_14_2"
                                                  t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"
                                            />
                                        </div>
                                        <div class="panel_1_gray_block_content_title">
                                            Tuition Savings
                                        </div>
                                    </div>
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/savings_tuition.PNG"/>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_details">
                                            <span t-esc="0 - life.question_22_1"
                                                  t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"
                                            />
                                        </div>
                                        <div class="panel_1_gray_block_content_title">
                                            Pay Off Debt
                                        </div>
                                    </div>
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/pay_off_debt.PNG"/>
                                </div>

                                <div class="thankyou_pannel_overall_info_text">
                                    Total Remaining Balance After Debts/Education are Paid
                                </div>

                                <div class="thankyou_panel_1_total_amount">
                                    <t t-esc="thk_invest_balance"
                                       t-options="{
                                       'widget': 'monetary',
                                       'display_currency': currency_id
                                       }"
                                    />
                                </div>
                            </div>

                            <!--Panel 2 End-->

                            <!--Panel 3 Start-->
                            <div class="thankyou_content_wrapper_panel thankyou_pannel_1">
                                <div class="thankyou_content_inner_title">
                                    <span>Invest the Balance Annual Interest Earned Used to Pay Recurring Annual
                                        Expenses.
                                    </span>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <div class="panel_2_gray_block_content_wrapper">
                                        <div class="panel_2_gray_block_content_details">
                                            <span t-esc="thk_invest_balance"
                                                  t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"
                                            />
                                        </div>
                                        <div class="panel_2_gray_block_content_title">
                                            Invest Balance
                                        </div>
                                    </div>
                                    <img class="panel_2_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/invest_balance.PNG"/>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <div class="panel_2_gray_block_content_wrapper">
                                        <div class="panel_2_gray_block_content_details">
                                            <span t-esc="thk_invest_balance * 0.05"
                                                  t-options="{
                                                    'widget': 'monetary',
                                                    'display_currency': currency_id
                                                  }"
                                            />
                                        </div>
                                        <div class="panel_2_gray_block_content_title">
                                            Annual Investment Income Covers Annual Recurring Expenses
                                        </div>
                                    </div>
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/annual_investment.PNG"/>
                                </div>
                            </div>
                            <!--Panel 3 End-->

                            <!--Panel 4 Start-->
                            <div class="thankyou_content_wrapper_panel thankyou_pannel_1">
                                <div class="thankyou_content_death_benefit">
                                    <div class="thankyou_total_insurance">
                                        <span t-esc="life.total_insurance"
                                              t-options="{
                                                'widget': 'monetary',
                                                'display_currency': currency_id
                                              }"
                                        />
                                    </div>
                                    <div class="thankyou_total_insurance">
                                        <span>Death Benefit</span>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_white_block panel_1_gray_block">
                                    <div class="panel_2_white_block_content_wrapper">
                                        <div class="panel_2_white_block_image_title">
                                            Pays Off Your Debt
                                        </div>
                                    </div>
                                    <img class="panel_2_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/debt_white.PNG"/>
                                </div>

                                <div class="thankyou_panel_content_white_block panel_1_gray_block">
                                    <div class="panel_2_white_block_content_wrapper">
                                        <div class="panel_2_white_block_image_title">
                                            Funds Your Kids Education
                                        </div>
                                    </div>
                                    <img class="panel_2_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/tuition_white.PNG"/>
                                </div>

                                <div class="thankyou_panel_content_white_block panel_1_gray_block">
                                    <div class="panel_2_white_block_content_wrapper">
                                        <div class="panel_2_white_block_image_title">
                                            Covers All Your Annual Recurring Expenses
                                        </div>
                                    </div>
                                    <img class="panel_2_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/expenses_white.PNG"/>
                                </div>

                                <div class="thankyou_panel_legacy_white_block">
                                    <div class="panel_2_white_block_legacy_worth_title pb-4">
                                        And Still Leaves Behind A Financial Legacy Worth:
                                    </div>
                                    <div class="panel_2_white_block_legacy_worth_amount">
                                        <span t-esc="thk_invest_balance"
                                              t-options="{
                                                'widget': 'monetary',
                                                'display_currency': currency_id
                                              }"
                                        />
                                    </div>
                                </div>
                            </div>
                            <!--Panel 4 End-->

                            <!--Panel 5 Start-->
                            <div class="thankyou_content_wrapper_panel_title">
                                <span>Request Quotes
                                    <i class="fa fa-sign-in pull-right mt-1 pr-2"
                                       style="font-size: larger;"
                                       title="Click to save below details"/>
                                </span>
                            </div>

                            <div class="thankyou_request_content_wrapper_panel">
                                <div class="thankyou_content_inner_title">
                                    <span t-esc="life.question_28 + ' ' + life.question_29"/>
                                </div>
                                <div class="thankyou_panel_request_death_benefit_content">
                                    <span>Death Benefit:
                                        <t t-esc="life.total_insurance"
                                           t-options="{
                                                'widget': 'monetary',
                                               'display_currency': currency_id
                                           }"
                                        />
                                    </span>
                                </div>
                                <div>
                                    <input id="date_of_birth" type="text" class="thankyou_input_data"
                                           name="date_of_birth" required="True"
                                           placeholder="Date of birth: MM/DD/YYYY"/>
                                </div>
                                <div>
                                    <select type="text" class="thankyou_input_data"
                                            name="gender" required="True">
                                        <option value="">Sex</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                                <div>
                                    <input type="text" class="thankyou_input_data"
                                           name="state" required="True"
                                           placeholder="State"/>
                                </div>
                                <div>
                                    <select type="text" class="thankyou_input_data"
                                            name="do_you_smoke" required="True">
                                        <option value="">Do You Smoke?</option>
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>
                                </div>

                                <div class="thankyou_rate_health">
                                    Rate Your Health
                                </div>

                            </div>
                            <!--Panel 5 End-->
                            <div class="thankyou_content_wrapper_panel">
                                <div class="thankyou_panel_request_death_benefit_content">
                                    Choose Policy Type(s)
                                </div>
                                <div class="thankyou_policy_content pb-2">
                                    <div class="thankyou_policy_radio">
                                        <label class="thankyou_policy_radio_label">10 Year Level Term
                                            <input type="radio" checked="checked" name="radio"/>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="thankyou_policy_radio">
                                        <label class="thankyou_policy_radio_label">15 Year Level Term
                                            <input type="radio" name="radio"/>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="thankyou_policy_radio">
                                        <label class="thankyou_policy_radio_label">20 Year Level Term
                                            <input type="radio" name="radio"/>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="thankyou_policy_radio">
                                        <label class="thankyou_policy_radio_label">30 Year Level Term
                                            <input type="radio" name="radio"/>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="thankyou_policy_radio">
                                        <label class="thankyou_policy_radio_label">LifeTime Coverage
                                            <input type="radio" name="radio"/>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
