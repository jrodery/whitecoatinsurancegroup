<odoo>
    <template id="life_insurance_data_display_template" name="Thank You">
        <t t-call="website.layout">
            <div id="wrap" class="insurance_data_css">
                <section class="features">
                    <script>
                    </script>
                    <div class="row">
                        <t t-set="life" t-value="insurance_data"/>
                        <div class="offset-lg-1 col-lg-5 col-xs-6">
                          <div class="thankyou_content_wrapper text-center">
                            <!--Title That shows First/Last name and age-->
                            <div class="thankyou_customer_details_wrapper">
                                <h3>
                                    <strong>
                                        <span><t t-esc="life.question_28"/>&#160;&#160;<t t-esc="life.question_29"/>
                                        </span>
                                        <span>- Age <t t-esc="life.question_1"/>
                                        </span>
                                    </strong>
                                </h3>
                            </div>

                            <t t-set="thk_invest_balance"
                               t-value="life.total_insurance - (life.question_14_2 + life.question_22_1)"/>

                            <!--Panel 1 Start-->
                            <div class="thankyou_content_wrapper_panel thankyou_pannel_1">
                                <div class="thankyou_panel_content_gray_block panel_1_gray_block">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/retirement.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Desired Retirement Age
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_2"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block" t-if="life.question_7 > 0">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/children.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Kids/Future Kids
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_7"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block" t-if="life.question_14_2 > 0">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/tuition.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Tuition Responsibility
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_14_2"
                                               t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block" t-if="life.question_22_1 > 0">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/debt.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Total Debt
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_22_1"
                                               t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"
                                            />
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_panel_content_gray_block panel_1_gray_block" t-if="life.question_27_2 > 0">
                                    <img class="panel_1_gray_block_content_img"
                                         src="/cap_web_free_quote/static/src/img/expenses.PNG"/>
                                    <div class="panel_1_gray_block_content_wrapper">
                                        <div class="panel_1_gray_block_content_title">
                                            Annual Recurring Expenses
                                        </div>
                                        <div class="panel_1_gray_block_content_details">
                                            <t t-esc="life.question_27_2"
                                               t-options="{
                                               'widget': 'monetary',
                                               'display_currency': currency_id
                                               }"
                                            />
                                        </div>
                                    </div>
                                </div>

                                <div class="thankyou_pannel_overall_info_text">
                                    Total Life Insurance Death Benefit Required to cover your lifestyle
                                </div>

                                <div class="thankyou_panel_1_total_btn">
                                    <t t-esc="life.total_insurance"
                                       t-options="{
                                       'widget': 'monetary',
                                       'display_currency': currency_id
                                       }"
                                    />
                                </div>
                            </div>
                            <!--Panel 1 End-->

                            <!--Panel 2 Start-->
                            <div class="thankyou_content_wrapper_panel_title" t-if="life.question_14_2 > 0 or life.question_22_1 > 0 and thk_invest_balance > 0">
                              <span>What's The Plan If you Die?</span>
                            </div>

                            <div class="thankyou_content_wrapper_panel thankyou_pannel_1" t-if="life.question_14_2 > 0 or life.question_22_1 > 0 and thk_invest_balance > 0">
                              <t t-if="life.question_14_2 > 0 and life.question_22_1 > 0">
                                <div class="thankyou_content_inner_title">
                                  <span>Pay Off Debt and Set Aside Funds for your Children's Education</span>
                                </div>
                              </t>
                              <t t-elif="life.question_14_2 > 0">
                                <div class="thankyou_content_inner_title">
                                  <span>Set Aside Funds for your Children's Education</span>
                                </div>
                              </t>
                              <t t-elif="life.question_22_1 > 0">
